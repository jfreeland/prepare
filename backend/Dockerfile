FROM python:3.12-slim

WORKDIR /app

# Install uv
RUN pip install uv

# Copy dependency files
COPY pyproject.toml uv.lock ./

# Sync dependencies
RUN uv sync --frozen --no-install-project

# Copy source code
COPY . .

EXPOSE 8000

CMD ["sh", "-c", "ulimit -n 65536 && uv run uvicorn app.main:app --host 0.0.0.0 --port 8000"]
